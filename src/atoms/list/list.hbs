<ul class="atm-list"{{#if setHiddenIndex}} tabindex="-1"{{/if}} data-inputtype="{{#if isMultiSelect}}checkbox{{/if}}{{#if isSingleSelect}}radio{{/if}}">
  {{#each selectOptions}}
    <li {{#if id}}id="{{this.id}}"{{/if}} class="atm-list__item{{#if ../hasCheckIcon}} atm-list__item--check-icon{{/if}}{{#if ../hasIconLeft}} atm-list__item--icon-left{{/if}}{{#if ../hasIconRight}} atm-list__item--icon-right{{/if}}{{#if this.preSelected}} selected{{/if}}">
      {{#if_compare ../hasIconLeft "||" ../hasCheckIcon }}
        <svg class="icon">
          <use xlink:href="#{{{../iconLeft}}}"></use>
        </svg>
      {{/if_compare}}
      <input {{#if noInteraction}}tabindex="-1"{{/if}} name="{{../groupId}}"
             {{#if id}}id="{{#if ../isMultiSelect}}checkbox{{/if}}{{#if ../isSingleSelect}}radio{{/if}}-{{this.id}}"{{/if}}
             type="{{#if ../isMultiSelect}}checkbox{{/if}}{{#if ../isSingleSelect}}radio{{/if}}"
             value="{{{ this.value }}}" placeholder="{{{ this.label }}}"
             class="visuallyhidden"
             data-select-option
             {{#if preSelected}} checked{{/if}}
             {{#if ../validation}}data-validation{{/if}}
             {{#if ../validation.isRequired}}required{{/if}}>

      {{#if ../hasIconRight}}
        <svg class="icon">
          <use xlink:href="#{{{../iconRight}}}"></use>
        </svg>
      {{/if}}

      <label for="{{#if ../isMultiSelect}}checkbox{{/if}}{{#if ../isSingleSelect}}radio{{/if}}-{{this.id}}">{{{ this.label }}}</label>
    </li>
  {{/each}}
</ul>
