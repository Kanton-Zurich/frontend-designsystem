{{#if preview}}
  <!-- helper markup, can be ignored -->
  <button class="atm-button atm-button--big"
          onclick="document.querySelector('#{{modalId}}').dispatchEvent(new CustomEvent('Modal.open'))"
          aria-controls="{{modalId}}">Filter
    einblenden
  </button>
{{/if}}
<div id="{{modalId}}" class="mdl-modal" aria-hidden="true" data-init="modal">
  <div class="mdl-news-filter-mobile" data-init="newsFilterMobile">
    <div class="lyt-wrapper">
      <div class="grid-x grid-margin-x">
        <div class="cell small-offset-1 medium-offset-1 large-offset-2 xlarge-offset-2 small-10 medium-10 large-8">
          {{#each filters}}
            <div class="mdl-news-filter-mobile__sublevel">
              <div class="mdl-news-filter-mobile__sublevel-container">
                <h1 class="atm-heading mdl-news-filter-mobile__title">
                  <a href="#" class="mdl-news-filter-mobile__sublevel-backbutton">
                    <svg class="icon mdl-news-filter-mobile__sublevel-icon" focusable="false">
                      <use xlink:href="#arrow-left"></use>
                    </svg>
                  </a>
                  {{title}}
                </h1>
                <form novalidate>
                  {{> "atoms/form_input/form_input" filterInput}}
                </form>
                <div class="mdl-news-filter-mobile__sublevel-list">
                  <ul id="{{filterSelect.filterId}}" class="atm-list">
                    {{#each filterItems}}
                      <li {{#if id}}id="{{id}}"{{/if}} class="atm-list__item atm-list__item--check-icon">
                        <svg class="icon" focusable="false">
                          <use xlink:href="#check"></use>
                        </svg>
                        <input name="group-iconLeftMulti" {{#if id}}id="checkbox-{{id}}"{{/if}} type="checkbox" value="{{value}}"
                               placeholder="{{label}}">
                        <label>{{label}}</label>
                      </li>
                    {{/each}}
                  </ul>
                </div>
                <div class="mdl-news-filter-mobile__sublevel-footer">
                  <button class="atm-button">Anwenden</button>
                </div>
              </div>
            </div>
          {{/each}}
          <div class="mdl-news-filter-mobile__container">
            <h1 class="atm-heading mdl-news-filter-mobile__title">Filter</h1>
            {{> "modules/datepicker/datepicker" dateDropDown}}
            {{#each filters}}
            {{> "atoms/linklist_item/linklist_item" filterSelect}}
            {{/each}}
          </div>
        </div>
      </div>
    </div>
    <div class="mdl-news-filter-mobile__footer">
      <button class="atm-button">Ergebnisse Anzeigen</button>
    </div>
  </div>
</div>
