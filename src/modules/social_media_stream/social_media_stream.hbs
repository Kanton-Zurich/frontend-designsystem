<div class="mdl-social_media_stream" data-init="socialMediaStream">
  <ul class="mdl-social_media_stream__items">
    {{#each posts}}
    <li class="mdl-social_media_stream__item">
      <p class="mdl-social_media_stream__text atm-paragraph">
        {{{ text }}}
        {{#if image}}
          <figure class="mdl-image-figure">
            <div class="mdl-image-figure__img-wrapper">
              <img class="mdl-image-figure__img" src="{{image}}" alt="Das ist ein Beispielbild"/>
            </div>
          </figure>
        {{/if}}
      </p>
      <div class="mdl-social_media_stream__item-footer">
        <a href="{{authorLink}}" class="mdl-social_media_stream__item-authorinfo">
          <button class="atm-button atm-button--icon-only atm-button--secondary">
            <span class="atm-button__text visuallyhidden">
              Button
            </span>
            <img class="icon" src="{{icon}}" alt="Youtube Icon">
          </button>
          <span>{{author}}</span><span>{{date}}</span>
        </a>
        <div class="mdl-social_media_stream__item-interaction">
          <a href="{{likeLink}}">
            <svg class="icon">
              <use xlink:href="#like"></use>
            </svg>
            <span>{{likes}}</span>
          </a>
          <a href="{{commentLink}}">
            <svg class="icon">
              <use xlink:href="#comments"></use>
            </svg>
            <span>{{comments}}</span>
          </a>
          <a href="{{forwardLink}}">
            <svg class="icon">
              <use xlink:href="#repost"></use>
            </svg>
            <span>{{forwards}}</span>
          </a>
        </div>
      </div>
    </li>
    {{/each}}
  </ul>
</div>
