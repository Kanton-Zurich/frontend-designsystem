<div class="mdl-teaser__wrapper">
  <a href="{{teaserLink}}" class="mdl-teaser{{#if colorVariation}} mdl-teaser--cv-{{{colorVariation}}}{{/if}}"
     data-init="teaser">
    <div class="mdl-teaser__content">
      <time class="mdl-teaser__date" datetime="{{teaserMachineReadableDate}}">{{teaserDisplayDate}}</time>
      <h2 class="mdl-teaser__title atm-heading" data-lineclamp="true">
        {{teaserTitle_listItem1}}
      </h2>

      <p data-teaser="teaserDescription" data-lineclamp="true" class="mdl-teaser__description">
        {{teaserDescription_listItem1}}
      </p>

      <div>
        <div class="atm-button">
          <span class="atm-button__text ">{{teaserButtonLabel}}</span>
        </div>
      </div>

    </div>
    <div class="mdl-teaser__image">
      {{> "modules/image_figure/image_figure"}}
    </div>
  </a>

  <a href="{{teaserLink}}"
     class="mdl-teaser mdl-teaser--left{{#if colorVariation}} mdl-teaser--cv-{{{colorVariation}}}{{/if}}"
     data-init="teaser">
    <div class="mdl-teaser__content">
      <time class="mdl-teaser__date" datetime="{{teaserMachineReadableDate}}">{{teaserDisplayDate}}</time>
      <h2 class="mdl-teaser__title atm-heading" data-lineclamp="true">
        {{teaserTitle_listItem2}}
      </h2>

      <p class="mdl-teaser__description" data-lineclamp="true">
        {{teaserDescription_listItem2}}
      </p>

      <div>
        <div class="atm-button">
          <span class="atm-button__text ">{{teaserButtonLabel}}</span>
        </div>
      </div>

    </div>
    <div class="mdl-teaser__image">
      {{> "modules/image_figure/image_figure"}}
    </div>
  </a>
</div>

