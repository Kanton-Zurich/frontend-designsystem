<figure class="mdl-image-figure{{#if isSmall}} mdl-image-figure--imagesmall{{/if}}{{#if isWide}} mdl-image-figure--fullwidth{{/if}}">
  <div class="mdl-image-figure__img-wrapper">
    <img
        class="mdl-image-figure__img"
        src="{{srcsets.[0].image}}"
        srcset="{{#each srcsets}}{{image}} {{width}}w{{#if @last}}{{else}}, {{/if}}{{/each}}"
        sizes="{{#each srcsets}}{{#if @last}}{{width}}px{{else}}(min-width: {{deviceWidth}}px) {{width}}px, {{/if}}{{/each}}"
        alt="{{alt}}"
      />
  </div>
  <figcaption class="mdl-image-figure__caption">
    {{> "atoms/figcaption/figcaption" caption}}
    {{#if hasDownload}}<a href="{{srcsets.[0].image}}" download class="mdl-image-figure__download">
      <svg class="icon mdl-image-figure__download-icon">
        <use xlink:href="#download"></use>
      </svg>
      <span class="visuallyhidden">Das Originalbild herunterladen</span>
    </a>{{/if}}
  </figcaption>
</figure>
