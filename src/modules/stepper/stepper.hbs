<div class="mdl-stepper" data-init="stepper">
  <h2 class="atm-heading">{{title}}</h2>

  <!-- PLACEHOLDER STEPPER NAVIGATION -->

  <form class="mdl-stepper__wrapper form" data-stepper="wrapper" novalidate>
    {{#each steps}}
      <div class="mdl-stepper__step" data-stepper="step">
        {{> "modules/form/form" this}}
      </div>
    {{/each}}
  </form>

  <div class="mdl-stepper__control">
    <button class="atm-button atm-button--secondary" data-stepper="back">Zur√ºck</button>
    <button class="atm-button" data-stepper="next">Weiter</button>
  </div>
</div>
