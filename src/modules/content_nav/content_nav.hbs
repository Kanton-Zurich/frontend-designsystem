<div class="
  mdl-content_nav
  {{#ifLengthBetween items 1 1}}mdl-content_nav--single-column{{/ifLengthBetween}}
  {{#ifLengthBetween items 2 4}}mdl-content_nav--two-columns{{/ifLengthBetween}}
  {{#if additionalClasses}} {{{additionalClasses}}}{{/if}}"
  data-init="contentNav"
  aria-live="polite"
  {{#if selector}}{{{selector}}}{{/if}}
>
  <ul class="mdl-content_nav__list">
    {{#each items}}
      <li class="mdl-content_nav__item">
        {{> "atoms/content_teaser/content_teaser" this}}
      </li>
    {{/each}}
    {{#if promotopic}}
      <li class="mdl-content_nav__item">
        {{> "atoms/content_teaser/content_teaser" promotopic}}
      </li>
    {{/if}}
  </ul>
</div>
