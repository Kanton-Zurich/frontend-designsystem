  </ul>
  <p class="atm-paragraph">
    {{{pText}}}
  </p>
  {{> "modules/quote/quote"}}
  <p class="atm-paragraph">
    {{pText2}}
  </p>
  <ul class="mdl-richtext__benefits">
    <li><span class="visuallyhidden">Vorteil:</span> {{benefitItem}}</li>
    <li><span class="visuallyhidden">Vorteil:</span> {{benefitItem}}</li>
    <li><span class="visuallyhidden">Vorteil:</span> {{benefitItem}}</li>
  </ul>
  <p class="atm-paragraph">
    {{pText2}}
  </p>
  <div class="mdl-richtext__emphasis">
    <p class="atm-paragraph">
      <em>{{emphasisText}}</em>
    </p>
  </div>
  <ol>
    <li>{{benefitItem}}</li>
    <li>{{benefitItem}}</li>
    <li>{{benefitItem}}</li>
  </ol>
  <p class="atm-paragraph">
    Bei Fragen wenden Sie sich in elektronischer Form an <a href="mailto:info@zh.ch" class="atm-text_link">info@zh.ch</a>
  </p>
{{/unless}}
  {{#if embedded}}
    <h4 class="atm-heading">
      {{h4Text}}
    </h4>
    <p class="atm-paragraph">
      {{{pText}}}
    </p>
    {{> "modules/quote/quote"}}
    <ul class="mdl-richtext__benefits">
      <li><span class="visuallyhidden">Vorteil:</span> {{benefitItem}}</li>
      <li><span class="visuallyhidden">Vorteil:</span> {{benefitItem}}</li>
