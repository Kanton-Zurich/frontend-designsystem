<div class="atm-form_input atm-form_input--floated" data-input>
    <input class="atm-form_input__input<% if (value) { %> dirty<% } %>"
           tabindex="-1" type="text" data-validation data-floating
           data-input-mask="currency_flat"
           data-min-amount="<%=minSize%>"
           data-max-amount="<%=maxSize%>"
           data-pattern="^[+-]?((\.\d+)|([\d&#x27;]+(\.\d+)?))$" id="input-<%=fieldName%>" placeholder="<%=label%>"
          <% if (reinvokeTrigger) { %> data-tax_calc-reinvoke="true"<% } %>
           name="<%=fieldName%>" value="<%=value %>" type="text"<% if (mandatory) { %> required<% } %>>

    <label for="input-<%=fieldName%>"><%=label%></label>
    <span class="atm-form_input__validate-icon">
		<span>
			<span class="visuallyhidden">Eingabe entspricht den Vorgaben.</span>
			<svg class="icon" focusable="false">
				<use xlink:href="#confirm"></use>
			</svg>
		</span>
		<span>
			<span class="visuallyhidden">Eingabe entspricht nicht den Vorgaben.</span>
			<svg class="icon" focusable="false">
				<use xlink:href="#caution"></use>
			</svg>
		</span>
	</span>

  <% if (mandatory) { %>
  <p class="form__fieldset-error-message" data-message="required">{{requiredMessages.number}}</p>
  <% } %>
  <p class="form__fieldset-error-message" data-message="pattern">{{errorMessages.number}}</p>
  <p class="form__fieldset-error-message" data-message="outofbounds">{{errorMessages.outOfBounds}}</p>
  <% if (hint) { %>
    <div class="atm-form_input__hint"><%=hint %></div>
  <% } %>
</div>
