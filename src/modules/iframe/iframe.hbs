{{#unless iframeFullSize}}
  <div
    class="mdl-iframe {{#if iframeSmall}}mdl-iframe--small{{/if}}{{#if heading}} mdl-iframe--with-title{{/if}}"
    {{#unless iframeSmall}} data-anchornav="fullwidth"{{/unless}}
    data-init="iframe"
  >
  {{#if heading.title}}
    {{#if caption}}<figure class="mdl-iframe__figure">{{/if}}

    <h{{heading.level}} class="atm-heading
      {{#if_compare heading.visualLevel "!==" heading.level}}h{{heading.visualLevel}}{{/if_compare}}
      {{#if_compare heading.visualLevel "===" 2 }}atm-heading--bordered{{/if_compare}}"
    >
      {{heading.title}}
    </h{{heading.level}}>
  {{/if}}
  {{#unless heading.title}}
  <h{{{iframeScreenReaderHeading.level}}}
    class="atm-heading visuallyhidden">{{{iframeScreenReaderHeading.title}}}</h{{{iframeScreenReaderHeading.level}}}>
  {{/unless}}

  {{#unless iframeSmall}}
  <div class="mdl-iframe__wrapper">
    <div class="lyt-wrapper">
      <div class="grid-x grid-margin-x">
        <div class="cell small-12 medium-12 large-12 xlarge-12">
  {{/unless}}

  <iframe src="{{{iframeSrc}}}" aria-labelledby="{{iframeCaptionId}}" {{#if iframeHeight}} style="height: {{{iframeHeight}}}px"{{/if}}></iframe>

  {{#unless iframeSmall}}
        </div>
      </div>
    </div>
  </div>
  {{/unless}}

  {{#if caption}}
    <figcaption class="mdl-iframe__caption">
      <span id="{{iframeCaptionId}}" class="atm-figcaption" data-figcaption="caption">{{{caption.caption}}}</span>
    </figcaption>
  </figure>
  {{/if}}
  <div class="mdl-iframe__sub">
    {{#if iframeTextLink}}{{> "atoms/text_link/text_link" iframeTextLink}}{{/if}}
  </div>

</div>
{{/unless}}
{{#if iframeFullSize}}
  <div class="mdl-iframe mdl-iframe--fullWidth" data-anchornav="fullwidth" data-init="iframe">
    <iframe src="{{{iframeSrc}}}"></iframe>
  </div>
{{/if}}
