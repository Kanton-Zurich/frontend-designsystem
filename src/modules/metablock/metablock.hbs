<div class="mdl-metablock {{#if marginTop}}mdl-metablock--margin-top{{/if}} {{#if marginBottom}}mdl-metablock--margin-bottom{{/if}} {{#if smallerHeadings}}mod-smaller-headings{{/if}}">
  {{#if hasTopTitle}}
  <h{{headingLevel}} class="atm-heading">{{title}}</h{{headingLevel}}>
  {{/if}}
{{#each rows}}
  <div class="mdl-metablock__row">
  {{#each columns}}
  <dl class="mdl-descriptionlist">
    <dt>{{label}}</dt>
    <dd>{{{text}}}</dd>
  </dl>
  {{/each}}
  </div>
{{/each}}
</div>
