<a href="{{this.link}}">
  <h3 class="atm-heading" data-lineclamp="true">
    {{{this.title}}}
  </h3>

  {{#if this.type}}
    <p class="mdl-news-teaser__item-label">
      {{#if this.type}}{{this.type}}{{/if}}
      <time datetime="">{{this.date}}</time>
    </p>
  {{else}}
    <time class="mdl-news-teaser__date" datetime="">{{this.date}}</time>
  {{/if}}

  {{#if this.teaserImage}}
    <div class="mdl-news-teaser__item-image">
      <figure class="mdl-image-figure">
        <div class="mdl-image-figure__img-wrapper">
          <img class="mdl-image-figure__img" src="{{this.teaserImage}}" alt="" />
        </div>
      </figure>
    </div>
  {{/if}}

  {{#if this.teaserText}}
    <p data-lineclamp="true" class="atm-paragraph">{{this.teaserText}}</p>
  {{/if}}
</a>
