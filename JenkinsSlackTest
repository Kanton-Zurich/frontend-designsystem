pipeline {
  agent any
  tools {nodejs "node"}
  environment {
    SLACK_CREDENTIALS = 'slack_auth_token_zhch'
    SLACK_TEAM_DOMAIN = 'zhch'
    SLACK_CHANNEL = '#frontend'
  }
  stages {
    stage('build') {
      steps {
          sh 'echo "Test build"'
          script {
            env.BUILD_FULL = sh (
                script: "echo 'LOOOOOG'",
                returnStatus: true
            ) == 0
          }
          echo "Build full flag: ${env.BUILD_FULL}"
      }
    }
  }
  post {
    success {
      slackSend(
        tokenCredentialId: "${env.SLACK_CREDENTIALS}",
        teamDomain: "${env.SLACK_TEAM_DOMAIN}",
        channel: "${env.SLACK_CHANNEL}",
        botUser: true,
        color: 'good',
        attachments: [
          [
           text: currentBuild.rawBuild.log,
           fallback: 'Logfile',
           color: '#00FF00'
          ],
        ],
        message: "Test Success"
      )
    }
    failure {
      slackSend(
        tokenCredentialId: "${env.SLACK_CREDENTIALS}",
        teamDomain: "${env.SLACK_TEAM_DOMAIN}",
        channel: "${env.SLACK_CHANNEL}",
        botUser: true,
        color: 'danger',
        attachments: [
          [
           text: "${BUILD_URL}/consoleText",
           fallback: 'Logfile',
           color: '#FF0000'
          ],
        ],
        message: "Test Fail"
      )
    }
  }
}
